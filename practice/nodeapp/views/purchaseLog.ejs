  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body style="padding:0 ;margin:0;">
    <div id="navContainer">
        <ul class = "nav">
            <li class = "nav_element"><a class = "link" href="/nftlist">NFT List</a></li>
            <li class = "nav_element"><a class = "link" href="/purchaseLog">Trader Info</a></li>
            <li class = "nav_element"><a class = "link" href="/tableOwned">Owned NFT</a></li>
            <li class = "nav_element"><a class = "link" href="/actualPurchaseLog">Purchase Log</a></li>
            <li class = "nav_element"><a class = "link" href="/addMoney">Transfer Funds</a></li>
            <li class = "nav_element"><a class = "link" href="/buyForm">Buy NFT</a></li>
            <li class = "nav_element"><a class = "link" href="/">Create Trader</a></li>
            <li class = "nav_element"><a class = "link" href="/requestRefund">Refund</a></li>
    </div>
    <div class="table-data">
        <!--====form section start====-->
        <div class="user-detail card-body">
            <h2>Show the Trader Info of the User</h2>
            <form action="/purchaseLogForm" method="POST">
                <div class = "form-group">
                <label>Email</label>
                <input type="text" placeholder="Email" name="email" class ="form-control" required>
                </div>
                <div class ="form-group">
                <label>Password</label>
                <input type="password" placeholder="Password" name="password" class ="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                <br>
            </form>
                <script>
                    console.log("this is running")
                </script>
        </div>
    </div>
    <div class = "card-body">
        <table class="table table-bordered" >     
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Level</th>
                <th>Etherum Address</th>
                <th>clientID</th>
            </tr>
            
            <%
            if(nfttable.length!=0){
        
                nfttable.forEach(function(data){        
            %>
            <tr>
                <td><%=data.name %></td>
                <td><%=data.phoneNumber %></td>
                <td><%=data.level %></td>
                <td><%=data.ethereumAddress %></td>
                <td><%=data.clientID %></td>
            </tr>
            <%   }) %>
            <% } else{ %>
                <tr>
                    <td colspan="7">No Data Found</td>
                </tr>
            <% } %>
        </table>
    </div>
    

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

