<!DOCTYPE html>
<html lang="en">
<head>
  <title>NFTs Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body style="padding:0 ;margin:0;">
    <div id="navContainer">
        <ul class = "nav">
            <li class = "nav_element"><a class = "link" href="/nftlist">NFT List</a></li>
            <li class = "nav_element"><a class = "link" href="/purchaseLog">Trader Info</a></li>
            <li class = "nav_element"><a class = "link" href="/tableOwned">Owned NFT</a></li>
            <li class = "nav_element"><a class = "link" href="/actualPurchaseLog">Purchase Log</a></li>
        </ul>
    </div>
<div class="card-body">
<h2>All NFTs on Platform</h2>
    <table class="table table-bordered">     
        <tr>
            <th>Name</th>
            <th>Client ID</th>
            <th>Price</th>
        </tr>
        
        <%
        if(nfttable.length!=0){
    
            nfttable.forEach(function(data){        
        %>
        <tr>
            <td><%=data.name %></td>
            <td><%=data.clientID %></td>
            <td><%=data.price %></td>
        </tr>
        <%   }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>